{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "alwaysStrict": true,
        "removeComments": true,
        "outDir": "build",
        "declaration": true,
        "sourceMap": true,
    },
    "exclude": [
        "node_modules",
        "build",
        "**/__tests__"
    ]
}